<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Text Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title (Tour Package Name) -->
            <TextView
                android:id="@+id/tourPackageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour Package Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Description (Tour Package Description) -->
            <TextView
                android:id="@+id/tourPackageDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour Description"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <!-- Agenda (Optional) -->
            <TextView
                android:id="@+id/tourPackageAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agenda"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp"/>

            <!-- Price -->
            <TextView
                android:id="@+id/tourPackagePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Wishlist Icon (Heart Icon) -->
        <ImageView
            android:id="@+id/wishlistIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="Wishlist icon" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
